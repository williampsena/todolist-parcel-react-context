{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "build",
    "removeComments": true,
    "strict": false, // We should enable after fix all typescript
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6", "es2018", "dom"]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
